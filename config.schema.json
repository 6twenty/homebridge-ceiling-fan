{
  "pluginAlias": "TuyaCeilingFan",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Homebridge plugin for Tuya ceiling fans",
  "footerDisplay": "",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Tuya Ceiling Fan",
        "required": true,
        "description": "Plugin name as displayed in the homebridge log"
      },
      "key": {
        "title": "Local Key",
        "type": "string",
        "placeholder": "ABC123",
        "required": true
      },
      "devices": {
        "type": "array",
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "id": {
              "title": "Device ID",
              "type": "string",
              "placeholder": "ABC123",
              "required": true
            },
            "ip": {
              "title": "Device IP address (use if auto-discovery fails)",
              "type": "string",
              "placeholder": "123.234.345.456"
            },
            "version": {
              "title": "Device API version (use if auto-discovery fails)",
              "type": "string",
              "placeholder": "3.3"
            }
          }
        }
      }
    }
  },
  "form": [
    "name",
    "key",
    {
      "type": "fieldset",
      "expandable": true,
      "title": "Devices",
      "items": [
        {
          "key": "devices",
          "type": "array",
          "items": [
            "devices[].id",
            "devices[].ip",
            "devices[].version"
          ]
        }
      ]
    }
  ]
}
